<link rel="stylesheet" href="css/slick.css">
<link rel="stylesheet" href="css/slick-theme.css">
<script src="js/jquery-3.4.1.min.js"></script>
<script src="js/slick.min.js"></script>


<style>
body{
    font-family: sans-serif;
}
.site_container{
    width:100%;
    margin:auto;
    max-width:1440px;
    padding:0px 40px;
    box-sizing:border-box;
}
.pdp_inner{
   display: flex;
   justify-content: space-between; 
}
.product_gallery{
    width: 50%;  
}
.feature_media{
    width: 150px;
    height: 100px;
    display: block;
    margin: 10px auto;
    box-shadow: 0px 0px 6px rgb(0 0 0 / 30%);
    border-radius: 5px;
    border: 2px solid transparent;
}
.slider-nav .slick-center .feature_media{
    border: 2px solid #000;
}
span.feature_img {
    height: 400px;
    display: block;
}
span.feature_img img{
    width: 100%;
    height: 100%;
    object-fit: cover;  
}
.feature_media img{
    width: 100%;
    height: 100%;
    object-fit: contain;  
}
.feature_img img{
    width:100%;
}
.product_details{
    width:50%;
    padding-left:100px;
    padding-top: 50px;
}
.title_price{
    display: flex;
    justify-content: space-between;
    align-items: center; 
}
.title_price h2{
    margin: 0;
    font-size: 50px;
}
.title_price p{
    margin: 0;
    font-size: 20px;
    font-weight: 600;
    color: #808080; 
}
.product_details h3{
    font-size: 16px;
    margin-top: 0;
    margin-bottom: 40px;
    color: #808080;  
}
.product-tags{
    padding: 0;
    list-style: none;
    display: flex;
    margin: 40px 0px;  
}
.product-tags a{
    text-decoration: none;
    padding: 6px 8px;
    background: #808080;
    border-radius: 5px;
    color: #fff;
    margin-right: 10px;
    font-size: 12px; 
}
.all_h2{
    text-transform: capitalize;
    font-size: 22px; 
}
.variant_div select{
    width: 100%;
    padding: 12px;
    border: 1px solid #808080;
    border-radius: 4px; 
}
.product-tags h2{
    margin: 0;
    margin-right: 20px; 
}
.add_cart_div{
   margin-top: 40px; 
}
.add_cart_div button{
    display: flex;
    margin-top: 30px;
    width: 100%;
    border: 1px solid #000;
    height: 50px;
    justify-content: center;
    align-items: center;
    font-weight: 700;
    font-size: 16px;
    color: #fff;
    background: #000;
    cursor: pointer;  
}
.add_cart_div label{
    font-size: 16px; 
}
.add_cart_div input{
    width: 100px;
    padding: 10px; 
}
.slider-for{
    height:600px;
}
</style>



<script>
jQuery(document).ready(function($){
$('.slider-for').slick({
  slidesToShow: 1,
  slidesToScroll: 1,
  arrows: false,
  fade: true,
  asNavFor: '.slider-nav'
});
$('.slider-nav').slick({
  slidesToShow: 3,
  slidesToScroll: 1,
  asNavFor: '.slider-for',
  dots: true,
  centerMode: true,
  focusOnSelect: true
});
});

</script>
